{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GanhRong Launcher",
  "version": "0.1.0",
  "identifier": "com.ganhrong.launcher",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ganh Rong Launcher",
        "width": 1024,
        "height": 640,
        "resizable": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright Â© 2026 GanhRong Team",
    "shortDescription": "Launcher for Ganh Rong Game",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "sidebarImage": "icons/sidebar.bmp",
        "displayLanguageSelector": true
      }
    }
  }
}